<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InterfaceController</servlet-name>
        <servlet-class>InterfaceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AbstractController</servlet-name>
        <servlet-class>mack.controllers.AbstractController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerFactory</servlet-name>
        <servlet-class>mack.controllers.ControllerFactory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>mack.controllers.impl.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FrontControllerServlet</servlet-name>
        <servlet-class>mack.servlets.FrontControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarContaController</servlet-name>
        <servlet-class>mack.controllers.impl.BuscarContaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InterfaceController</servlet-name>
        <url-pattern>/InterfaceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AbstractController</servlet-name>
        <url-pattern>/AbstractController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerFactory</servlet-name>
        <url-pattern>/ControllerFactory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/IndexController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontControllerServlet</servlet-name>
        <url-pattern>/FrontControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarContaController</servlet-name>
        <url-pattern>/BuscarContaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
